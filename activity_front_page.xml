<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontPage"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/mTitle"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Botswana COVID Register"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/lobster"
        android:textSize="30dp"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:id="@+id/Phone"
        android:gravity="center"
        android:textColorHint="#FFFFFF"
        android:hint="Enter (+267) Phone Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_below="@id/mTitle"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:fontFamily="@font/lobster"
        android:textColor="#929295"
        android:layout_height="wrap_content"
        android:layout_below="@id/Phone"
        android:text="Please Insure to enter +267 before your phone number" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/textView"
        android:layout_marginTop="40dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabPhoneDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/colorAccent"
            android:clickable="true"
            app:srcCompat="@drawable/ic_done_black_24dp" />

    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>